<% layout("/layouts/boilerplate") %>
<body>
<div class="row  mt-3">
    <h1 class="col-6 offset-2">SignUp On WanderLust</h1>
    <div class="col-6 offset-2">  
       <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <lable for="username" class="form-label">Username</lable>
                <input name="username" id="username" placeholder="Enter your username" class="form-control" required/>
                <div class="valid-feedback">looks good</div>
            </div>
            <div class="mb-3">
                <lable for="email" class="form-label">Email</lable>
                <input name="email" id="email" placeholder="Enter your email" class="form-control" required/>
                
            </div>
            <div class="mb-3">
                <lable for="password" class="form-label">Password</lable>
                <input name="password" id="password" placeholder="Enter your password" class="form-control" required/>   
            </div>
            <button class="btn btn-success">Sign Up</button>
       </form>
    </div>
</div>
</body>